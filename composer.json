{
  "name": "contao-thememanager/ctm-placeholder-label",
  "type": "symfony-bundle",
  "description": "Placeholder label integration for Contao Theme-Manager",
  "keywords": ["contao","theme","form","label","placeholder"],
  "homepage": "https://www.oveleon.de/thememanager.html",
  "authors": [
    {
      "name": "Oveleon",
      "homepage": "https://oveleon.de/",
      "role": "Developer"
    },
    {
      "name": "Sebastian Zoglowek",
      "homepage": "https://github.com/zoglo",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "contao/core-bundle": "^4.13 || 5.1.* || 5.2.*",
    "contao-thememanager/core": "^2.0"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.3.1"
  },
  "conflict": {
    "contao/core": "*",
    "contao/manager-plugin": "<2.0 || >=3.0"
  },
  "autoload": {
    "psr-4": {
      "ContaoThemeManager\\PlaceholderLabel\\": "src/"
    },
    "classmap": [
      "contao/"
    ],
    "exclude-from-classmap": [
      "contao/config/",
      "contao/dca/",
      "contao/languages/",
      "contao/templates/"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    },
    "contao-manager-plugin": "ContaoThemeManager\\PlaceholderLabel\\ContaoManager\\Plugin"
  }
}
